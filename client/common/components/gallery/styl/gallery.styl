.col-33-custom
    width 24%

.gallery-row
    display flex
    flex-wrap wrap;

.gallery-item
    overflow hidden
    position relative
    padding-bottom 24%
    margin-right 1%
    margin-bottom 1%
    cursor pointer
    opacity 1
    transition: all ease-out .5s

    &:hover
        opacity .8

    img
        position absolute
        height 100%
        display block
        min-width 100%

.gallery-modal img
    width: 100%
    max-width 100%
    max-height 100%
    display block

@media screen and (max-width: 768px)
    .col-33-custom
        width 32.3%

    .gallery-item
        padding-bottom  32.3%

@media screen and (max-width: 480px)
    .col-33-custom
        width 49%

    .gallery-item
        padding-bottom  49%

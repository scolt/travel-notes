media = 1180px 24% 16% 74%, 980px 32% 19% 66%, 748px 49% 26% 45%, 480px 99% 75% 99%

i.fa-trash
    position absolute
    top 0
    right 0
    padding 5px
    background rgba(255, 255, 255, .8)
    color #00bcd4
    margin 5px
    cursor pointer
    z-index 10
    &:hover {
        color #000
        background #fff
    }

.text-wrapper
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow auto
    font-size 13px
    border 3px dashed  #00bcd4
    padding 10px
    p
        margin 0 0 10px

.notes-grid
    overflow hidden
    width 100%
    margin 0 -0.5%

.note-grid-item
    width 19%
    margin-right .5%
    margin-left .5%
    margin-bottom 1%
    overflow hidden
    height 0
    padding-bottom 12.5%
    position relative
    float left

    &:hover
        opacity 1

        img
            width 150%
            min-height 150%
            margin-left -25%
            margin-top: -25%

    img
        width 100%
        min-height 100%
        transition all ease-out .5s
        position absolute

    .note-grid-metadata
        position absolute
        bottom 0
        background rgba(0, 0, 0, 0.4)
        width 100%
        color #fff
        padding 10px

        .subtitle
            font-size .8em

        .title
            margin-bottom 5px

for pair in media
    @media screen and (max-width: pair[0])
        .note-grid-item
            &.no-results
                width pair[3]

            width pair[1]
            padding-bottom pair[2]

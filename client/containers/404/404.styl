.not-found-message
    position absolute
    top 50%
    left 50%
    margin -75px 0 0 -175px
    width 350px
    padding 25px 25px 25px 95px
    font-size 16px
    z-index 30
    &:before
        content '404'
        position absolute
        left 25px
        top 20px
        font-size 35px

.not-found-page
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    margin 0
    overflow hidden
    img
        position absolute
        top 0
        left 0
        min-width 100%
        min-height 100%
        height 100%

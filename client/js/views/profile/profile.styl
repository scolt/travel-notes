.user-profile-header
    position relative

    .user-profile-edit
        position absolute
        right 16px
        top 50%
        margin-top -20px

.image-developer
    width 80%
    padding-bottom 80%
    margin 1em auto
    overflow hidden
    position relative
    transform translate3d(0, 0, 0);
    img
        position absolute
        width auto
        min-width 100%
        min-height 100%

    .developer-info
        text-align center

    .additional-developer-info
        font-size 32px
        a
            padding 3px
            color #ccc
            &:hover
                padding 3px
                color #323232

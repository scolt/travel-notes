.col-33-custom
    width 25%

.gallery-item
    overflow hidden
    position relative
    padding-bottom 25%
    cursor pointer
    opacity 1
    transition: all ease-out .5s

    &:hover
        opacity .8

    img
        position absolute
        height 100%
        display block

.gallery-modal img
    width: 100%
    max-width 100%
    max-height 100%
    display block

@media screen and (max-width: 768px)
    .col-33-custom
        width 33.3%

    .gallery-item
        padding-bottom  33.3%

@media screen and (max-width: 480px)
    .col-33-custom
        width 50%

    .gallery-item
        padding-bottom  50%

*
    box-sizing border-box
    -moz-box-sizing border-box

body
    margin 0

html, body
    height 100%

#app
    min-height 100%
    padding 64px 0 49px
    position relative

.header
    position fixed
    top 0
    left 0
    width 100%
    z-index 50;

.footer
    position absolute
    width 100%
    bottom 0

.spinner
    font-size 75px
    width 100%
    text-align: center;
    .fa
        margin 0 auto
        padding 50px
        color #00bcd4

.feed-item-add
    transition all ease-out .5s
    cursor pointer

    .feed-item-in
        height 100%

    .fa-plus
        transition all ease-out .5s
        width 80px
        height 80px
        line-height 80px
        position absolute
        top 50%
        left 50%
        font-size 100px
        margin -40px 0 0 -40px
        text-align: center
        color: #00bcd4
        display: block

.feed-item-add:hover
    .fa-plus
        transform scale(1.2)

